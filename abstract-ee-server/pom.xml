    <dependency>
      <groupId>org.ow2.util.scan</groupId>
      <artifactId>scan-impl</artifactId>
      <version>3.0.0-M1</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.ow2.util.metadata</groupId>
      <artifactId>metadata-common-impl</artifactId>
      <version>3.0.0-M2-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>com.peergreen.jndi</groupId>
      <artifactId>jndi-service</artifactId>
      <version>${jndi-service.version}</version>
      <scope>provided</scope>
    </dependency>

  </dependencies>


