<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>abstract-server</artifactId>
    <groupId>com.peergreen.server</groupId>
    <version>1.0.0-M3-SNAPSHOT</version>
    <relativePath>../abstract-server/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>abstract-ee-server</artifactId>
  <packaging>pom</packaging>

  <name>Peergreen Common stuff for EE server</name>
  <properties>
    <ow2-spec.version>1.0.13</ow2-spec.version>
  </properties>


  <dependencies>

    <!-- Annotations -->
    <dependency>
      <groupId>org.ow2.spec.ee</groupId>
      <artifactId>ow2-annotation-1.1-spec</artifactId>
      <version>${ow2-spec.version}</version>
      <scope>provided</scope>
    </dependency>

    <!-- OSGi Enterprise -->
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.enterprise</artifactId>
      <version>5.0.0</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.ow2.util.xml</groupId>
      <artifactId>xml</artifactId>
      <version>2.0.1</version>
      <scope>provided</scope>
    </dependency>

